{
  "version": 2,
  "name": "expattaxback",
  "builds": [
    { "src": "www/package.json", "use": "@now/next" },
    { "src": "api/*.js", "use": "@now/node"}
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/www/$1" }
  ],
  "env": {
    "AIRTABLE_API_KEY": "@airtable_api_key",
    "SENDGRID_API_KEY": "@sendgrid_api_key"
  },
  "regions": ["lhr", "bru"]
}
